/* 展示数据 */
.nullTips {
    color: #999;
    position: absolute;
    top: 30%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.content_list {
    margin: 10rpx 0;
}

/* 用户信息 */
.content_list .content {
    margin: 20rpx 0;
}

/* 一些个提交的组件 */
.content_list .content .orderScreenshot {
    display: flex;
    flex-direction: column;
    text-align: center;
    position: absolute;
    top: 40%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #eee;
    padding: 30rpx 30rpx 30rpx 48rpx;
    border-radius: 10rpx;
}

.content .orderScreenshot .flunk_reason {
    margin-bottom: 30rpx;
    text-align: left;
}

.content .orderScreenshot .push_pic_btn {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 10rpx;
}

.orderScreenshot .push_pic_btn .pic_btn {
    transform: translate(-10rpx);
}
